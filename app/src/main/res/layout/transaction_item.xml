<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/background_layer_2"
    android:elevation="4dp"
    android:layout_margin="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

    <TextView
        android:id="@+id/transaction_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transaction_name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/font_color_active"
        />


        <TextView
            android:id="@+id/transaction_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_category"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/font_color_inactive"
            />


</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">


    <TextView
        android:id="@+id/transaction_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transaction_amount"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/font_color_active"
        />

    <TextView
        android:id="@+id/transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transaction_date"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/font_color_inactive"
        />

    </LinearLayout>


</LinearLayout>